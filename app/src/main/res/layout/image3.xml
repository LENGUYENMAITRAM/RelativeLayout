<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Top Content Here"
        android:textColor="#FBFAFA"
        android:background="#f20"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/khoangcachgiua"
        android:layout_centerInParent="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Second"
        android:textColor="#FBFAFA"
        android:background="#347DB8"
        android:textSize="25dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="First"
        android:textColor="#FBFAFA"
        android:background="#6CA627"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/khoangcachgiua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Three"
        android:textColor="#FBFAFA"
        android:background="#F1C236"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/khoangcachgiua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Bottom Content Here"
        android:textColor="#FBFAFA"
        android:background="#B5B0AF"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>